<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customizar o Theme do AlertDialog -->
        <item name="android:alertDialogTheme">@style/AppTheme.Dark.Dialog.Error</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <style name="Txt_Teste">
        <item name="android:color">@color/txt_padrao</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>        
    </style>

    <style name="Txt_Estilo">
        <item name="android:color">@color/txt_padrao</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>
    </style>

    <style name="Edt_Estilo">
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_weight">@dimen/margin_widgets</item>
    </style>

    <style name="Style_Botao">
        <item name="android:textColor">@color/txtBotao</item>
        <item name="android:textSize">@dimen/texto_botao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/bg_enviar</item>
    </style>

   <style name="Style_Login">
        <item name="android:textColor">@color/txtBotao</item>
        <item name="android:textSize">@dimen/texto_botao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/bg_enviar</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Error" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_error</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Info" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_info</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Sucesso" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_sucesso</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Alerta" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_alerta</item>
    </style>

</resources>
